{
  "name": "Edupage Addons",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Enhance your Edupage experience",
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "*://*.edupage.org/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    "src/injs/*"
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cfp@cfp.gotdns.ch"
    }
  }
}
